{% trans_default_domain 'FOSUserBundle' %}
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
<div class="form-group row col-sm-8">
    <label class="form-label col-sm-2">E-mail</label>
    {{ form_widget(form.email,{'attr':{'class':'form-control col-sm-6'}}) }}
</div>
<div class="form-group row col-sm-8">
    <label class="form-label col-sm-2">Username</label>
    {{ form_widget(form.username,{'attr':{'class':'form-control col-sm-6'}}) }}
</div>
<div class="form-group row col-sm-8">
    <label class="form-label col-sm-2">Password</label>
    {{ form_widget(form.plainPassword.first,{'attr':{'class':'form-control col-sm-6'}}) }}
</div>
<div class="form-group row col-sm-8">
    <label class="form-label col-sm-2">Confirm password</label>
    {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control col-sm-6'}}) }}
</div>
<div>
    <input class="btn btn-success" type="submit" value="Sign up"/>
</div>
{{ form_end(form) }}

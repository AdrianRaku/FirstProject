{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}


    <div class="form-group row">
        <label class="form-label col-sm-2" for="username">Login</label>
        <input class="form-control col-sm-6" type="text" id="username" name="_username" value="{{ last_username }}"
               required="required" autocomplete="username"/>
    </div>
    <div class="form-group row">
        <label class="form-label col-sm-2" for="password">Password </label>
        <input class="form-control col-sm-6" type="password" id="password" name="_password" required="required"
               autocomplete="current-password"/>
    </div>
    <div class="form-group row">
        <label class="form-label col-sm-2" for="remember_me">Remember me</label>
        <input class="form-control col-sm-1 float-left" type="checkbox" id="remember_me" name="remember_me" value="on"/>
    </div>
    <input class="btn-success btn  offset-3 col-sm-2" type="submit" id="_submit" name="_submit" value="Log in"/>


</form>
